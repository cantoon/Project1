<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <link href="~/Styles/boostrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Styles/site.css" rel="stylesheet" />
    <title>@ViewBag.Title - [STU-Q&A]</title>
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-sm text-light navbar-light">
            <a class="navbar-brand" href="#">STU</a>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#collapsibleNavBar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavBar">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/home/index">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/about">Về chúng tôi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/contact">Liên hệ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/categories">Chủ đề</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/allquestions">Forums</a>
                    </li>
                    @if (Session["CurrentUserName"] == null)
                    {
                        <li class="nav-item active">
                            <a class="nav-link" href="/account/login">Đăng nhập</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/account/register">Đăng ký</a>
                        </li>
                    }

                    @if (Session["CurrentUserName"] != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">
                                <img src="~/Images/user.png" width="20" /> @Session["CurrentUserName"]
                            </a>
                            <div class="dropdown-menu bg-info">
                                <a class="dropdown-item" href="/account/logout">Đăng xuất</a>
                                <a class="dropdown-item" href="/account/changeprofile">Thay đổi thông tin</a>
                                <a class="dropdown-item" href="/account/changepassword">Thay đổi mật khẩu</a>
                            </div>
                        </li>
                    }
                </ul>
            </div>

            <form class="form-inline" action="/home/search">
                <input type="search" class="form-control mr-sm-2" style="width:150px" placeholder="Search" name="str" />
                <button class="btn btn-success">Search</button>
            </form>
        </nav>
    </div>
    <div class="container-fluid">
        @RenderBody()
    </div>
</body>
</html>

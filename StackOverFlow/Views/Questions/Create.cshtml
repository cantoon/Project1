@model StackOverFlow.ViewModels.CategoryViewModel

@{ 
    ViewBag.Title = "Thêm câu hỏi";
}
<div class="row">
    <div class="col-sm-12">
        <h1>Tạo câu hỏi</h1>
        <form class="needs-validation" novalidate="novalidate" action="/questions/create" method="post">
            @Html.AntiForgeryToken()
            <div class="form-row">
                <div class="form-group col-sm-12">
                    <label for="txtQuestionName">Câu hỏi</label>
                    <textarea class="form-control" id="txtQuestionName" placeholder="Nhập câu hỏi" name="QuestionName" required="required" pattern="^[a-zA-Z]*$" autofocus="autofocus"></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Vui lòng nhập câu hỏi
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="drpCategory">Chủ đề</label>
                    <select class="form-control" id="drpCategory" name="CategoryID" required="required">
                        <option value="">Hãy chọn chủ đề</option>
                        @foreach (var item in ViewBag.categories)
                        {
                            <option value="@item.CategoryID">@item.CategoryName</option>
                         }
                     </select>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Chủ đề không thể để trống
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Thêm câu hỏi</button>
        </form>
    </div>
</div>

<script>
    $(document).on("submit", ".needs-validation", validate);
    $(".needs-validation input").blur(validate);
    function validate(event)
    {
        if ($(".needs-validation")[0].checkValidity() == false)
        {
            event.preventDefault();
        }
        $(".needs-validation")[0].classList.add("was-validated");
    }

</script>